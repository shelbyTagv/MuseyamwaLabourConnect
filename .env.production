# MuseyamwaLabourConnect – Production Environment Template
# Fill in your actual values from Neon, Render, and Vercel

# ── Database (Neon – get from Neon dashboard) ─────────────────
DATABASE_URL=postgresql+asyncpg://user:password@ep-xyz.us-east-2.aws.neon.tech/labourconnect?sslmode=require
DATABASE_URL_SYNC=postgresql://user:password@ep-xyz.us-east-2.aws.neon.tech/labourconnect?sslmode=require

# ── Auth / JWT ────────────────────────────────────────────────
SECRET_KEY=generate-a-random-64-char-string-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ── Admin ─────────────────────────────────────────────────────
ADMIN_EMAIL=admin@museyamwa.co.zw
ADMIN_PASSWORD=ChangeThisToSomethingSecure!
ADMIN_PHONE=+263771234567

# ── Pesepay ───────────────────────────────────────────────────
PESEPAY_INTEGRATION_KEY=your-pesepay-integration-key
PESEPAY_ENCRYPTION_KEY=your-pesepay-encryption-key
PESEPAY_API_URL=https://api.pesepay.com/api/payments-engine/v1
PESEPAY_RETURN_URL=https://your-app.vercel.app/tokens/callback
PESEPAY_RESULT_URL=https://your-backend.onrender.com/api/v1/payments/webhook

# ── URLs (fill in after deploying) ────────────────────────────
APP_NAME=MuseyamwaLabourConnect
APP_URL=https://your-app.vercel.app
API_URL=https://your-backend.onrender.com
CORS_ORIGINS=https://your-app.vercel.app

# ── Token Economics ───────────────────────────────────────────
DEFAULT_TOKEN_PRICE_USD=0.50
TOKENS_PER_PURCHASE=10
JOB_POST_TOKEN_COST=2
JOB_REQUEST_TOKEN_COST=1

# ── GPS ───────────────────────────────────────────────────────
LOCATION_UPDATE_INTERVAL_SECONDS=15
MAX_PROXIMITY_KM=50
