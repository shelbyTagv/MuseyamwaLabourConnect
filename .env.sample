# MuseyamwaLabourConnect Environment Configuration
# Copy this to .env and fill in your values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5432/labourconnect
DATABASE_URL_SYNC=postgresql://postgres:postgres@db:5432/labourconnect
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=labourconnect

# Auth / JWT
SECRET_KEY=change-me-to-a-random-64-char-string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin (created on first startup)
ADMIN_EMAIL=admin@museyamwa.co.zw
ADMIN_PASSWORD=Admin@12345
ADMIN_PHONE=+263771234567

# Pesepay
PESEPAY_INTEGRATION_KEY=your-pesepay-integration-key
PESEPAY_ENCRYPTION_KEY=your-pesepay-encryption-key
PESEPAY_API_URL=https://api.pesepay.com/api/payments-engine/v1
PESEPAY_RETURN_URL=http://localhost:3000/tokens/callback
PESEPAY_RESULT_URL=http://localhost:8000/api/v1/payments/webhook

# App
APP_NAME=MuseyamwaLabourConnect
APP_URL=http://localhost:3000
API_URL=http://localhost:8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Token Config
DEFAULT_TOKEN_PRICE_USD=0.50
TOKENS_PER_PURCHASE=10
JOB_POST_TOKEN_COST=2
JOB_REQUEST_TOKEN_COST=1

# GPS
LOCATION_UPDATE_INTERVAL_SECONDS=15
MAX_PROXIMITY_KM=50
